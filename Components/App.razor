    <script>
        window.setFrameWidth = (element, wsize) => {
            if (element.style != null) {
                element.style.width = wsize + 'px';
            }
        };

        window.setImgHeight = (element, wsize) => {
            if (element.style != null) {
                var hsize = Math.round(wsize / (1920 / 1080));
                element.style.height = hsize + 'px';
            }
        };
    </script>
